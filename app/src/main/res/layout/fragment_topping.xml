<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentTopping">

    <TextView
        android:id="@+id/tv_colours_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/pinkPrimary"
        android:text="Topping"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/tv_colours_title"
        android:id="@+id/scrollviewColours"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <RadioButton
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="None"
                        android:textSize="18dp"/>

                    <RadioButton
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whipped Cream"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Red Cherries"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chic Choc"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biscuits"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abstract Cream"
                        android:textSize="18dp" />


                </RadioGroup>

            </TableRow>

        </TableLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>


