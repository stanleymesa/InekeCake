<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="224dp"
    app:cardCornerRadius="16dp"
    android:layout_marginRight="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_design_dashboard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/designing"/>

        <TextView
            android:id="@+id/tv_step_design_dashboard"
            app:layout_constraintTop_toBottomOf="@id/iv_design_dashboard"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Step 1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baumans"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_desc_design_dashboard"
            app:layout_constraintTop_toBottomOf="@id/tv_step_design_dashboard"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Hias cake sesuka anda."
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baumans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>