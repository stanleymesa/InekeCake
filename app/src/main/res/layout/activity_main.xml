<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/horizontalScroll"
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                app:layout_constraintTop_toTopOf="@id/frameLayout"
                app:layout_constraintLeft_toLeftOf="@id/frameLayout"
                app:layout_constraintRight_toRightOf="@id/frameLayout"
                android:id="@+id/cakeImage"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:src="@drawable/plaincake"/>

            <ImageView
                app:layout_constraintTop_toTopOf="@id/cakeImage"
                app:layout_constraintLeft_toLeftOf="@id/cakeImage"
                app:layout_constraintRight_toRightOf="@id/cakeImage"
                android:layout_gravity="center"
                android:layout_marginBottom="54dp"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:src="@drawable/creamtosca"/>

        </FrameLayout>

        <ScrollView
            android:id="@+id/horizontalScroll"
            app:layout_constraintTop_toBottomOf="@id/frameLayout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/radioGroup2">

                        <RadioButton
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:onClick="buttonClick"
                            android:text="Plain"
                            app:layout_constraintLeft_toLeftOf="@id/radioGroup1"
                            app:layout_constraintRight_toRightOf="@id/button2" />

                        <RadioButton
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick"
                            android:text="Blue"
                            app:layout_constraintLeft_toLeftOf="@id/button1"
                            app:layout_constraintRight_toRightOf="@id/button2" />

                        <RadioButton
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick"
                            android:text="Blue"
                            app:layout_constraintLeft_toLeftOf="@id/button1"
                            app:layout_constraintRight_toRightOf="@id/button2" />

                        <RadioButton
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick"
                            android:text="Blue"
                            app:layout_constraintLeft_toLeftOf="@id/button1"
                            app:layout_constraintRight_toRightOf="@id/button2" />


                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick2"
                            android:text="Blue"/>

                        <RadioButton
                            android:id="@+id/button6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick2"
                            android:text="Blue"/>

                        <RadioButton
                            android:id="@+id/button7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick2"
                            android:text="Blue"/>

                        <RadioButton
                            android:id="@+id/button8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClick2"
                            android:text="Blue"/>

                    </RadioGroup>

                </TableRow>

            </TableLayout>


        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>