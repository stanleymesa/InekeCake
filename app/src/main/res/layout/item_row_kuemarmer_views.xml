<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_isInCart_kuemarmer"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/softPink"/>


        <ImageView
            android:id="@+id/iv_kuemarmer_views"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/layout_isInCart_kuemarmer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            tools:src="@drawable/original"
            android:scaleType="fitXY"/>

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@id/iv_kuemarmer_views"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_kuemarmer_views"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/baumans"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="Kue Marmer Original"/>


            <TextView
                android:id="@+id/tv_harga_kuemarmer_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/baumans"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="45.000"/>

            <TextView
                android:id="@+id/tv_qty_kuemarmer_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baumans"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/softPink"
                android:visibility="gone"
                tools:text="x3"/>

        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>